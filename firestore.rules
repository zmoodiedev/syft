rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if the user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Rules for development - REMOVE FOR PRODUCTION
    // match /{document=**} {
    //   allow read, write: if isAuthenticated();
    // }
    
    // PRODUCTION RULES - Uncomment these for production

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() && isOwner(userId);
    }
    
    // Friend requests
    match /friendRequests/{requestId} {
      allow read, write: if isAuthenticated();
    }
    
    // Friendships
    match /friendships/{friendshipId} {
      allow read, write: if isAuthenticated();
    }
    
    // Recipes collection - Allow all authenticated users to read
    match /recipes/{recipeId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Shared recipes
    match /sharedRecipes/{sharedRecipeId} {
      // Any authenticated user can read shared recipes
      allow read: if isAuthenticated();
      
      // Only the sender can create shared recipes
      allow create: if isAuthenticated() && request.resource.data.senderId == request.auth.uid;
      
      // Sender and receiver can update/delete shared recipes
      allow update, delete: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid || 
        resource.data.receiverId == request.auth.uid
      );
    }
  }
} 